<div class='modal' id='myModal'>
  <div class='modal-body'>
    <div class='modal-header'>
      Please enter user information: <br />
    </div>
    <%= form_for @user do |user_form| %>
    <%= user_form.text_field :username, :placeholder => "Username", :id => "signup_username" %><br>
    <%= user_form.text_field :email, :placeholder => "Email", :id => "signup_email" %><br>
    <%= user_form.password_field :password, :placeholder => "Password", :id => "signup_password" %><br>
    <%= user_form.submit "Create User" %><br>
    <% end %>
  </div>
</div>